---
import '../styles/global.css';
import '../styles/custom.css';

interface Props {
  title?: string;
}

const { title = 'Otium OS Demo' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/otium-favicon.png" />
  </head>
  <body class="bg-gray-950 text-gray-100 min-h-screen m-0">
    <header class="border-b border-gray-800 bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 py-2 flex items-center justify-between">
        <a href="/" class="flex items-center gap-3 no-underline">
          <img src="/otium-favicon.png" alt="Otium" class="w-8 h-8" />
          <h1 class="text-xl font-bold text-white">Otium</h1>
        </a>
        <a
          href="/"
          class="px-4 py-2 text-sm font-medium text-gray-300 hover:text-white transition-colors"
        >
          ‚Üê Back to docs
        </a>
      </div>
    </header>
    <main class="max-w-7xl mx-auto px-4 py-4">
      <slot />
    </main>
  </body>
</html>
